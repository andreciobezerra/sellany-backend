  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Unit Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["--inspect-brk"],
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["--projects", "./tests/unit", "--runInBand"],
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },
    {
      "name": "Debug Jest Functional Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": ["--inspect-brk"],
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["--projects", "./tests/functional", "--runInBand"],
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}
