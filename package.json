{
  "name": "sellany-backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "andrecio <andreciobezerra@gmail.com>",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "dependencies": {
    "axios": "^0.21.1",
    "better-sqlite3": "^7.1.2",
    "config": "^3.3.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "morgan": "^1.10.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^5.4.1",
    "@types/config": "^0.0.38",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.25",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": false,
    "printWidth": 100,
    "semi": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git push"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "npx eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start:web": "yarn build && NODE_ENV='production'  node dist/src/api/index.js",
    "dev:web": "NODE_ENV='development' ts-node-dev -r tsconfig-paths/register src/api/index.ts",
    "build": "tsc",
    "test": "yarn test:unit && yarn test:functional",
    "test:unit": "jest --projects ./tests/unit ",
    "test:functional": "jest --projects ./tests/functional --forceExit --runInBand",
    "lint": "eslint ./src ./tests --ext .ts",
    "lint:fix": "yarn eslint ./src ./tests --ext .ts --fix"
  }
}
