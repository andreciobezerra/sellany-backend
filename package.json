{
  "name": "sellany-backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "andrecio <andreciobezerra@gmail.com>",
  "license": "MIT",
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "axios": "^0.21.1",
    "config": "^3.3.3",
    "express": "^4.17.1",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/config": "^0.0.38",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.25",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": false,
    "printWidth": 100,
    "semi": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git push"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "npx eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "yarn build && node dist/src/index.js",
    "dev": "ts-node-dev 'src/index.ts'",
    "build": "tsc",
    "test": "yarn test:unit && yarn test:functional",
    "test:unit": "jest --projects ./test/unit",
    "test:functional": "jest --projects ./test/functional --forceExit --runInBand",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "yarn eslint ./src ./test --ext .ts --fix"
  }
}
